<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0"
  ExtensionBundleId="com.tms.runner1.bundle"
  ExtensionBundleName="TMS - Web"
  ExtensionBundleVersion="1.0.0">
  

  <ExtensionList>
    <Extension Id="com.tms.runner1" Version="1.0.0"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="[0.0,99.9]"/>
    </HostList>

    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>

    <RequiredRuntimeList>
      <!-- Use a range so the panel appears across CEP versions -->
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.tms.runner1">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>
          <ScriptPath>./jsx/runner.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--mixed-context</Parameter>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--remote-debugging-port=7777</Parameter>
          </CEFCommandLine>
        </Resources>

        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>

        <UI>
          <Type>Panel</Type>
          <Menu>TMS - Web</Menu>
          <Geometry>
            <Size>
              <Width>420</Width>
              <Height>620</Height>
            </Size>
            <MinSize>
              <Width>360</Width>
              <Height>520</Height>
            </MinSize>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>

</ExtensionManifest>
